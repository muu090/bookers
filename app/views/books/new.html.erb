<h2>New book</h2>
<%# 空白時にエラーメッセージ表示 %>
<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book)  do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <div>
    <%= f.submit 'Create Book' %>
  </div>

<% end %>